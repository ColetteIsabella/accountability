
  <h2>Add tasks you'd like to work on, order doesn't matter:</h2>

<%= form_for :task, @task, html: {:action => "create"} do |f| %>
  <table>
    <tr>
      <td><%= f.text_field :assignment %></td>
      <td><%= f.submit %></td>
      </tr>
    <% end %>

    <% @tasks.each do |task| %>
    <tr>
      <td colspan="3"></td>
      <td><%= @task.assignment :assignment %></td>

  </tr>
  <%= task.submit %>
<% end %>

</table>
